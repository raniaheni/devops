pipeline {
    agent any
    environment {
        DOCKER_CREDENTIALS_ID = 'your-dockerhub-credentials-id' // Replace with your actual Docker credentials ID
    }
    stages {
        
        stage('Checkout Git') {
            steps {
                echo 'Checking out the code from Git...'
                git branch: 'manelWALHA-5SAE1-G2', url: 'https://github.com/raniaheni/devops.git', credentialsId: '8b2286e4-a399-418c-a7e3-6c55da5e1a57' 
            }
        }
       
        stage('Project Clean') {
            steps {
                sh 'mvn clean'
            }
        }

        stage('Project Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t walhamanel/manelwalha-5sae1-g2 .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                        sh 'docker push walhamanel/manelwalha-5sae1-g2'
                    }
                }
            }
        }
        
    }
}
