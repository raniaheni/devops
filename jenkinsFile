pipeline {
    agent any
    stages {
        
        stage('Checkout Git') {
            steps {
                echo 'pluggins ...'
                git branch: 'manelWALHA-5SAE1-G2', url: 'https://github.com/raniaheni/devops.git',credentialsId: '8b2286e4-a399-418c-a7e3-6c55da5e1a57' 
            }
        }
       
        stage('project clean') {
            steps {
                sh 'mvn clean '
            }
        }
        stage('project  package') {
            steps {
                sh 'mvn package -DskipTests '
            }
        }

        stage('Generate JaCoCo Report') {
            steps {
                sh 'mvn test jacoco:report -Dtest=tn.esprit.springTest.UniversiteServiceMockitoTest'
            }
        }

                
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh 'mvn sonar:sonar -Dsonar.projectKey=tn.esprit.spring:Foyer -Dsonar.java.coveragePlugin=jacoco -Dsonar.jacoco.reportPaths=target/jacoco-report/jacoco.xml -Dsonar.java.binaries=target'
                
                }
            }
        }

          stage('Deployment in Nexus') {
            steps {
                sh 'mvn deploy'
            }
        }
        
        stage('Pull from Docker Hub') {
            steps {
                sh "docker pull walhamanel/alpine:1.0.0"
            }
        }
        
        
        
    }
}
